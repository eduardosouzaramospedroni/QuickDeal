<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_esqueciSenha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".TelaLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="176dp"
        android:layout_height="88dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toTopOf="@+id/table_esqueciSenha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/quickdeal"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/table_esqueciSenha"
        android:layout_width="326dp"
        android:layout_height="313dp"
        android:background="@drawable/tabela_arredondada"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38">


        <TextView
            android:id="@+id/texto_esqueciSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Esqueci minha senha"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="34dp" />

        <EditText
            android:id="@+id/txt_novasenha"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:lineSpacingExtra="12dp"
            android:text="Informe a nova senha"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="12dp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,SpUsage,TextSizeCheck,VisualLintBounds" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/txt_novasenha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="text"
            android:text="Informe a nova senha novamente"
            android:textColor="@color/black"
            android:textSize="12dp"
            tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,SpUsage,TextSizeCheck,TouchTargetSizeCheck,VisualLintBounds" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/botao_amarelo"
            android:fontFamily="sans-serif-black"
            android:text="Continuar"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transpa"
            android:text="Cancelar"
            android:textColor="@color/gray"
            android:textSize="12dp"
            tools:ignore="HardcodedText,SpUsage,TextSizeCheck,VisualLintButtonSize" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>